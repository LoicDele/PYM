{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{encore_entry_link_tags('userEdit')}}
{% endblock %}
{% block javascripts %}
    {{encore_entry_script_tags('userEdit')}}
{% endblock %}

{% block body %}
    {% if app.user %}
            <div class="card">
                <div class="card-header bg-dark ">
                    <h4>Modifier un utilisateur</h4> 
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-1"></div>
                        <div class="col-10">
                            {{ form_start(form) }}
                            {{ form_widget(form)}}
                        </div>
                        <div class="col-1"></div>
                    </div>
                    <div class="btns row">
                        <div class="col-1"></div>
                        <a href="{{ path('users')}}" class="btn btn-secondary btn-back col-3">Annuler</a>
                        <div class="col-4"></div>
                        <button type="submit" class="btn btn-success btn-add col-3">Modifier</button>
                        <div class="col-1"></div>
                    </div>
                    {{form_end(form) }}
                </div>
            </div>
    {% else %}


    {% endif %}
{% endblock %}